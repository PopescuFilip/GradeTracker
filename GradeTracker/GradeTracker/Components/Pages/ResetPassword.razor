@page "/reset-pass"
@rendermode InteractiveServer

<div class="d-flex justify-content-center mt-5">
    <div class="card" style="width: 400px;">
        <div class="card-body">
            <h2 class="card-title text-center">Reset Password</h2>

            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input @bind="Username" type="text" class="form-control" id="username">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">New Password</label>
                <input @bind="Password" type="password" class="form-control" id="password">
            </div>

            @if (InvalidUsername)
            {
                <div class="mb-3 text-center">
                    <span class="text-danger">Invalid username. Please try again.</span>
                </div>
            }

            <div class="text-center">
                <button class="btn btn-primary" @onclick="Reset">Reset Password</button>
            </div>
        </div>
    </div>
</div>
